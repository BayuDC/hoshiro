{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "types": ["@types/express"],
    "outDir": "dist",
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["__test__/**/*"]
}
